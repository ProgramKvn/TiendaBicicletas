@page
@model TiendaBicicleta.Web.Pages.InventarioBicicletasModel
@{
}

<h1>Inventario de bicicletas</h1>

<a class="btn btn-lg btn-info text-white" asp-page="/InventarioBicicletas/RegistrarBicicleta"><i class="fas fa-plus-square"></i> Registrar bicicleta</a>
<br />
<br />
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Modelo</th>
            <th>Precio</th>
            <th>Color</th>
            <th><i class="fas fa-cog"></i> Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.InventarioBicicletas)
        {
            
            <tr>
                <td>@item.Id</td>
                <td>@item.Modelo</td>
                <td>@item.Precio</td>
                <td>@item.Color</td>
                <td>
                    <div style="display: flex; justify-content: space-between;">

                        <a class="btn btn-sm btn-success" asp-area="" asp-page="/InventarioBicicletas/EditarInventario" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Editar</a>
                        <a class="btn btn-sm btn-danger" asp-area="" asp-page="/InventarioBicicletas/EliminarRegistro" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>