@page
@model TiendaBicicleta.Web.Pages.Clientes.EditarClienteModel
@{
}

<form method="post">
    <div class="form-group">
        <label asp-for="Cliente.Nombres"></label>
        <input type="text" class="form-control" asp-for="Cliente.Nombres" placeholder="Ingresa los nombres del cliente aquí">
        <span class="text-danger" asp-validation-for="Cliente.Nombres"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Apellidos"></label>
        <input type="text" class="form-control" asp-for="Cliente.Apellidos" placeholder="Ingresa los apellidos del cliente aquí">
        <span class="text-danger" asp-validation-for="Cliente.Apellidos"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Telefono"></label>
        <input type="number" class="form-control" asp-for="Cliente.Telefono" placeholder="Ingresa el teléfono del cliente aquí">
        <span class="text-danger" asp-validation-for="Cliente.Telefono"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar cambios</button> <br />
    <a asp-page="/">Regresar</a>
</form>