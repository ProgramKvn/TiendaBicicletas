@page
@model TiendaBicicleta.Web.Pages.Clientes.ClienteModel
@{
}

<h1>Registro de clientes</h1>

<a class="btn btn-lg btn-info text-white" asp-page="/Clientes/RegistrarCliente"><i class="fas fa-plus-square"></i> Registrar cliente</a>
<br />
<br />
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Teléfono</th>
            <th><i class="fas fa-cog"></i> Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clientes)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombres</td>
                <td>@item.Apellidos</td>
                <td>@item.Telefono</td>
                <td>
                    <div style="display: flex; justify-content: space-between;">
                        <a class="btn btn-sm btn-success" asp-area="" asp-page="/Clientes/EditarCliente" asp-route-id="@item.Id"><i class="fas fa-user-edit"></i> Editar</a>
                        <a class="btn btn-sm btn-danger" asp-area="" asp-page="/Clientes/EliminarRegistroCliente" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>