@page
@model TiendaBicicleta.Web.Pages.Clientes.ClienteModel
@{
}

<h1>Registro de clientes</h1>

<a class="btn btn-sm btn-success" asp-page="/Clientes/RegistrarCliente">Registrar cliente</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Teléfono</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clientes)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombres</td>
                <td>@item.Apellidos</td>
                <td>@item.Telefono</td>
                <td><a class="btn btn-sm btn-info" asp-area="" asp-page="/Clientes/EditarCliente" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-info" asp-area="" asp-page="/Clientes/EliminarRegistroCliente" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>