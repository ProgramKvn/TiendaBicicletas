@page
@model TiendaBicicleta.Web.Pages.RegistroVentas.EditarRegistroModel
@{
}
<form method="post">
    <input type="hidden" asp-for="RegistroVenta.Id" />
    <div class="form-group">
        <label asp-for="RegistroVenta.ClienteId"></label>
        <input type="text" class="form-control" asp-for="RegistroVenta.ClienteId" placeholder="Ingresa el modelo de bicicleta aquí">
        <span class="text-danger" asp-validation-for="RegistroVenta.ClienteId"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegistroVenta.InventarioBicicletaId"></label>
        <input type="number" class="form-control" asp-for="RegistroVenta.InventarioBicicletaId" placeholder="Ingresa el precio de la bicicleta aquí">
        <span class="text-danger" asp-validation-for="RegistroVenta.InventarioBicicletaId"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar cambios</button> <br />
    <a asp-page="/InventarioBicicletas">Regresar</a>
</form>